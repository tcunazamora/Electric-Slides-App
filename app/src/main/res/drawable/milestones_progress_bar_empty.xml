<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listview_background_shape">
            <stroke
                android:width="0dp"
                android:color="@color/black" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners
                android:radius="20dp" />
            <gradient
                android:startColor="#9C51554C"
                android:centerColor="#AE8F8D8D"
                android:endColor="#A9797E77"

                android:type="linear" />
        </shape>
    </item>
</selector>